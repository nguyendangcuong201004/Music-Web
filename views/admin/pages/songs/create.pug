extends ../../layouts/default.pug  


block main 
    h1(class="mb-4") #{pageTitle}
    form(
        action=`/${prefixAdmin}/songs/create`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="title") Tên bài hát 
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
            )
        div(class="form-group")
            label(for="topic") Thể loại nhạc
            select(
                class="form-control"
                id="topic"
                name="topicId"
                required
            )
                option(value="" disabled selected) -- Chọn thể loại --
                each topic in topics
                    option(value=topic.id) #{topic.title}
        div(class="form-group")
            label(for="singer") Nghệ sỹ
            select(
                class="form-control"
                id="singer"
                name="singerId"
                required
            )
                option(value="" disabled selected) -- Nghệ sỹ --
                each singer in singers
                    option(value=singer.id) #{singer.fullName}
        div(
            class="form-group"
            upload-image
        ) 
            label(for="avatar") Ảnh
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            img(
                src=""
                class="image-preview"
                upload-image-preview
            )
        div(class="form-group")
            label(for="audio") Audio 
            input(
                type="file"
                class="form-control-file"
                id="audio"
                name="audio"
                accept="audio/*"
            ) 
        div(class="form-group")
            label(for="desc") Thông tin bài hát 
            textarea(
                type="text"
                class="form-control"
                id="desc"
                name="description"
                rows="5"
                textarea-mce
            ) 
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked
            )
            label(for="statusActive" class="form-check-label") Hoạt động  
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInActive"
                name="status"
                value="inactive"
            )
            label(for="statusInActive" class="form-check-label") Dừng hoạt động  
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary" 
            ) Upload