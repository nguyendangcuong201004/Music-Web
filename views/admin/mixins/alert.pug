mixin alert-success()
    -    if (messages.success)
            div(
            class="alert alert-success"
            show-alert
            data-time="5000"
            )   <i class="fa-brands fa-spotify"></i>
                | #{messages.success}
                button(class="btn btn-danger" style="margin-left: 10px" close-alert) x

mixin alert-error()
    -   if (messages.error)
            div(class="alert alert-danger" 
            show-alert
            data-time="5000"
            )   <i class="fa-brands fa-spotify"></i>
                |   #{messages.error}
                button(class="btn btn-danger" style="margin-left: 10px" close-alert) x