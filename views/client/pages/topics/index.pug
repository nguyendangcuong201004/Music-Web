extends ../../layouts/default.pug 
include ../../mixins/box-head.pug

block main 
    .container.my-3 
        .row
            .col-12.mb-4 
                +box-head("Hãy cùng spotify thưởng thức âm nhạc!")
        .row
            each topic in topics
                .col-3.mb-3
                    div(class="card")
                        img(src=`${topic.avatar}` atl=`${topic.title}`)
                        div(class="card-body")
                            h5(class="card-title") #{topic.title}
                            p(class="card-text") #{topic.description}
                            a(href=`/songs/${topic.slug}` class="btn btn-primary") <i class="fa-solid fa-circle-play"></i>
