extends ../../layouts/default.pug 
include ../../mixins/box-head.pug

block main 
    .container.my-3 
        .row
            .col-12.mb-4 
                +box-head(`${pageTitle}`)
        .row
            each item in myPlaylist
                .col-6.mb-3
                    div(class="song-item")
                        div(class="inner-image")
                            a(href=`/songs/detail/${item.song.slug}`)
                                img(src=item.song.avatar)
                        div(class="inner-content")
                            div(class="inner-title")
                                a(href=`/songs/detail/${item.song.slug}`) #{item.song.title}
                            div(class="inner-singer")  #{item.singer.fullName}
                            div(class="inner-like" list-like=item.song.id) <i class="fa-solid fa-heart"></i> <span> #{item.song.like}
                            div(class="inner-time") <i class="fa-regular fa-clock"></i> #{new Date(item.createdAt).toLocaleDateString('en-GB')}